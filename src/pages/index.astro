          </a>
          <a
            class="project flex-1 flex rounded-lg border border-zinc-600/50 p-5 flex-col gap-3 cursor-pointer bg-neutral-800/25 transition hover:bg-neutral-700/25 justify-between"
            href="https://gitlab.com/konradkubczyk/com-konradkubczyk"
            target="_blank"
          >
            <div>
              <h3 class="text-2xl font-semibold text-neutral-100">
                konradkubczyk.com
              </h3>
              <p class="text-white/70 mt-3">The currently viewed website.</p>
            </div>
            <div
              class="tags flex text-xs text-neutral-100 uppercase gap-2 tracking-wider border-t border-zinc-600/50 pt-5 mt-1"
            >
              <span class="border border-white/10 px-2 py-1 rounded">Astro</span
              >
              <span class="border border-white/10 px-2 py-1 rounded"
                >Tailwind CSS</span
              >
            </div>
          </a>
          <p
            id="no-projects-for-criteria-alert"
            class="hidden text-white/70 mt-5"
          >
            No projects match the selected criteria. You can reset the filters
            by
            <button class="reset-filters underline">clicking here</button>.
          </p>
        </div>
        <script>
          const projects = document.querySelectorAll("#projects > .project");
          projects.forEach((project) => {
            project.tags = project.querySelector(".tags").innerText.split("\n");
          });

          let availableFilters = [];

          projects.forEach((project) => {
            const projectTags = project
              .querySelector(".tags")
              .innerText.split("\n");
            projectTags.forEach((tag) => {
              if (!availableFilters.includes(tag)) {
                availableFilters.push(tag);
              }
            });
          });

          const filtersElement = document.querySelector("#filters");

          availableFilters.forEach((filter) => {
            const filterNameSimplified = filter
              .replace(" ", "")
              .replace(".", "")
              .toLowerCase();

            const filterInputElement = document.createElement("input");
            filterInputElement.type = "checkbox";
            filterInputElement.id = `project-filter-input-${filterNameSimplified}`;
            filterInputElement.classList.add("hidden");
            filtersElement.appendChild(filterInputElement);

            const filterLabelElement = document.createElement("label");

            filterLabelElement.htmlFor = `project-filter-${filterNameSimplified}`;
            filterLabelElement.id = `project-filter-label-${filterNameSimplified}`;
            filterLabelElement.tabIndex = 0;
            filterLabelElement.classList.add(
              "project-filter",
              "flex",
              "items-center",
              "text-center",
              "uppercase",
              "font-semibold",
              "tracking-wide",
              "text-sm",
              "bg-neutral-800/25",
              "px-3",
              "py-2",
              "rounded-full",
              "border",
              "border-zinc-600/50",
              "transition",
              "text-neutral-100/75",
              "hover:bg-neutral-700/25",
              "cursor-pointer",
              "select-none",
              "whitespace-nowrap"
            );
            filterLabelElement.innerText = filter;
            filtersElement.appendChild(filterLabelElement);
          });

          let activeFilters = [];

          function filterProjects() {
            if (activeFilters.length === 0) {
              projects.forEach((project) => {
                project.classList.remove("hidden");
              });
              document
                .querySelector("#no-projects-for-criteria-alert")
                .classList.add("hidden");
              return;
            }

            let hiddenProjectsCount = 0;

            projects.forEach((project) => {
              if (
                activeFilters.every((filter) => project.tags.includes(filter))
              ) {
                project.classList.remove("hidden");
              } else {
                project.classList.add("hidden");
                hiddenProjectsCount++;
              }
            });

            console.log(hiddenProjectsCount, projects.length);

            if (hiddenProjectsCount === projects.length) {
              document
                .querySelector("#no-projects-for-criteria-alert")
                .classList.remove("hidden");
            } else {
              document
                .querySelector("#no-projects-for-criteria-alert")
                .classList.add("hidden");
            }
          }

          function processFiltersChange(event) {
            let currentFilter = event.target.innerText;
            if (activeFilters.includes(currentFilter)) {
              activeFilters = activeFilters.filter(
                (filter) => filter !== currentFilter
              );
              event.target.style.background = "";
              event.target.style.borderColor = "";
              event.target.style.color = "";
            } else {
              activeFilters.push(currentFilter);
              event.target.style.background = "white";
              event.target.style.borderColor = "white";
              event.target.style.color = "black";
            }

            filterProjects();
          }

          document.querySelectorAll(".project-filter").forEach((element) => {
            element.addEventListener("click", processFiltersChange);
          });

          const SPACEBAR_KEYCODE = 32;

          function toggleFilter(event) {
            if (event.keyCode !== SPACEBAR_KEYCODE) {
              return;
            }
            event.target.click();
            event.preventDefault();
          }

          document.querySelectorAll(".project-filter").forEach((element) => {
            element.addEventListener("keydown", toggleFilter);
          });

          function resetFilters() {
            document.querySelectorAll(".project-filter").forEach((element) => {
              element.style.background = "";
              element.style.borderColor = "";
              element.style.color = "";
            });
            activeFilters = [];
            filterProjects();
          }

          document.querySelectorAll(".reset-filters").forEach((element) => {
            element.addEventListener("click", resetFilters);
          });
        </script>
      </section>
      <div style="height: 100vh;"></div>
    </div>
