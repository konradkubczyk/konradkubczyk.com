import Layout from "../layouts/Layout.astro";
---

<Layout title="Not found">
    <main>
        <section class="container mx-auto px-5 mt-36 sm:mt-40 mb-20 py-10 sm:text-center lg:w-5/6 xl:w-3/5">
            <span class="text-4xl sm:text-5xl md:text-6xl text-white mr-6 opacity-50">404</span>
            <h1
                    class="text-4xl sm:text-5xl md:text-6xl text-white inline"
            >Not found</h1>
            <p
                    class="text-white/70 my-5"
            >
                It appears the resource you are trying to access has been removed or never existed.
            </p>
            <a
                    href="/"
                    class="uppercase font-semibold tracking-wide text-sm bg-neutral-600/25 px-5 py-3 rounded border border-zinc-600/50 hover:border-zinc-500 transition text-white hover:bg-neutral-600/50 block sm:inline-block"
            >
                Homepage
            </a>
        </section>
    </main>
</Layout>
